import os, sys
from Pyro.EventService import Server
from Pyro.ext.daemonizer import Daemonizer

class ESD(Daemonizer):
    def __init__(self):
        Daemonizer.__init__(self)

    def main_loop(self):
        Server.start(sys.argv[1:])

if __name__ == "__main__":
    ESD().process_command_line(sys.argv)
